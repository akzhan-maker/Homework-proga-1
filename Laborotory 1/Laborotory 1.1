def compress_text(text):
    if not text:
        return ""

    result = []
    count = 1
    start_char = text[0]

    for i in range(1, len(text)):
        if text[i].lower() == text[i-1].lower():
            count += 1
        else:
            result.append(start_char)
            if count > 1:
                result.append(str(count))
            count = 1
            start_char = text[i]
    result.append(start_char)
    if count > 1:
        result.append(str(count))
    return "".join(result)
