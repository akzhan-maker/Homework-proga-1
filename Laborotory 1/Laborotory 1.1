def replace_every_nth(text, n, char):
    words = text.split(' ')
    result_words = []
    global_counter = 0
    for word in words:
        new_word = list(word)
        if len(word) >= 3:
            for i in range(len(new_word)):
                if not new_word[i].isdigit():
                    global_counter += 1
                    if global_counter % n == 0:
                        new_word[i] = char
        result_words.append("".join(new_word))
    return " ".join(result_words)
