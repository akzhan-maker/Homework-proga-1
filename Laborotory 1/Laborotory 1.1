def alternate_case_blocks(text, n):
    text = text.replace(" ", "")
    result = []
    block_index = 0
    for i in range(0, len(text), n):
        block = text[i:i+n]
        if block_index % 2 == 0:
            result.append(block.upper())
        else:
            result.append(block.lower())
        block_index += 1
    return "".join(result)
